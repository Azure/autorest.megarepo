// Place your settings in this file to overwrite default and user settings.
{
  "files.eol": "\n",
  "files.exclude": {
    "**/common/temp/**": true,
    "node_modules/**": true,
    "**/dist/**": true,
    "**/node_modules/**": true,
    "**/*.js.map": true,
    "**/*.js": {
      "when": "$(basename).ts"
    },
    "**/*.d.tsx": {
      "when": "$(basename).ts"
    },
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true
  },
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.tabSize": 2,
    "editor.detectIndentation": false
  },
  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.tabSize": 2,
    "editor.detectIndentation": false
  },
  "[json]": {
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.tabSize": 2,
    "editor.detectIndentation": false
  },
  "[jsonc]": {
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.tabSize": 2,
    "editor.detectIndentation": false
  },
  "files.associations": {
    "rush.json": "jsonc",
    "command-line.json": "jsonc"
  },
  "eslint.workingDirectories": [
    {
      "changeProcessCWD": true,
      "directory": "./perks/async-io",
    },
    {
      "changeProcessCWD": true,
      "directory": "./perks/autorest-extension-base",
    },
    {
      "changeProcessCWD": true,
      "directory": "./perks/codegen",
    },
    {
      "changeProcessCWD": true,
      "directory": "./perks/codegen-csharp",
    },
    {
      "changeProcessCWD": true,
      "directory": "./perks/codemodel-v3",
    },
    {
      "changeProcessCWD": true,
      "directory": "./perks/datastore",
    },
    {
      "changeProcessCWD": true,
      "directory": "./perks/deduplication",
    },
    {
      "changeProcessCWD": true,
      "directory": "./perks/eventing",
    },
    {
      "changeProcessCWD": true,
      "directory": "./perks/extension",
    },
    {
      "changeProcessCWD": true,
      "directory": "./perks/linq",
    },
    {
      "changeProcessCWD": true,
      "directory": "./perks/oai2-to-oai3",
    },
    {
      "changeProcessCWD": true,
      "directory": "./perks/object-comparison",
    },
    {
      "changeProcessCWD": true,
      "directory": "./perks/openapi",
    },
    {
      "changeProcessCWD": true,
      "directory": "./perks/tasks",
    },
    {
      "changeProcessCWD": true,
      "directory": "./perks/uri"
    },
    {
      "changeProcessCWD": true,
      "directory": "./autorest/autorest"
    },
    {
      "changeProcessCWD": true,
      "directory": "./autorest/core"
    },
    {
      "changeProcessCWD": true,
      "directory": "./autorest.remodeler/remodeler"
    },
    {
      "changeProcessCWD": true,
      "directory": "./autorest.powershell/powershell"
    }
  ],
  "eslint.autoFixOnSave": true,
  "eslint.validate": [
    "javascript",
    {
      "language": "typescript",
      "autoFix": true,
    },
    {
      "language": "typescriptreact",
      "autoFix": false
    }
  ],
}